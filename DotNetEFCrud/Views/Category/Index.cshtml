<div class="text-right mb-2">
    <a class="btn btn-info color-white" asp-route="addCategory">Add Category</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=> model.Categories.FirstOrDefault().CategoryName)</th>
            <th>Description</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Categories)
        {
            <tr>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a class="btn btn-danger" asp-route="deleteCategory" asp-route-id="@item.CategoryId">Delete</a>
                    <a class="btn btn-primary" asp-route="updateCategory" asp-route-id="@item.CategoryId">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>