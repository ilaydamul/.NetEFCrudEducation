@model CategoryIndexViewModel
@{
    var categoryModel = Model.Categories.FirstOrDefault();
}

@section Style{
    <style>
        .text-right{
            text-align:right;
        }

        .color-white{
            color:white;
        }
    </style>
}

@*
    Layout değiştirme:
